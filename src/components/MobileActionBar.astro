---
const base = import.meta.env.BASE_URL;
---

<div class="fixed bottom-0 left-0 right-0 z-50 md:hidden pb-safe">
    <div
        class="bg-armor/90 backdrop-blur-xl border-t border-white/10 px-6 py-4 flex items-center justify-between shadow-[0_-10px_30px_rgba(0,0,0,0.5)]"
    >
        <a
            href="tel:+61892223456"
            class="flex flex-col items-center gap-1 group"
        >
            <div
                class="w-10 h-10 bg-void border border-white/10 flex items-center justify-center text-white group-active:scale-90 transition-transform"
            >
                <svg
                    class="w-5 h-5 text-volt"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.5"
                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                </svg>
            </div>
            <span
                class="text-[9px] font-black uppercase tracking-widest text-muted"
                >Call</span
            >
        </a>

        <a
            href={`${base}contact`}
            class="flex flex-col items-center gap-1 group -translate-y-4"
        >
            <div
                class="w-16 h-16 bg-volt border border-void/10 flex items-center justify-center text-void shadow-[0_0_20px_rgba(212,255,0,0.3)] group-active:scale-95 transition-all"
            >
                <svg
                    class="w-8 h-8"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2.5"
                        d="M12 4v16m8-8H4"></path>
                </svg>
            </div>
            <span
                class="text-[10px] font-black uppercase tracking-widest text-volt mt-1"
                >Book</span
            >
        </a>

        <a
            href={`${base}contact#location`}
            class="flex flex-col items-center gap-1 group"
        >
            <div
                class="w-10 h-10 bg-void border border-white/10 flex items-center justify-center text-white group-active:scale-90 transition-transform"
            >
                <svg
                    class="w-5 h-5 text-flux"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.5"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.5"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
            </div>
            <span
                class="text-[9px] font-black uppercase tracking-widest text-muted"
                >Find</span
            >
        </a>
    </div>
</div>

<style>
    /* Hex-like shape using clip-path if desired, but square with borders fits the 'Forge' aesthetic well too. 
       Let's stick to the sharp square Forge look as per the theme. */
    .pb-safe {
        padding-bottom: env(safe-area-inset-bottom);
    }
</style>
