---
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ChargeButton from "../components/ChargeButton.astro";
import KineticText from "../components/KineticText.astro";
import BentoGrid from "../components/BentoGrid.astro";
import { programs } from "../data/content";
import { Image } from "astro:assets";
import heroBg from "../assets/images/hero-bg.webp";

const heroWords = ["TRAIN.", "ADAPT.", "EVOLVE.", "DOMINATE."];
const base = import.meta.env.BASE_URL;
---

<MainLayout title="PulseForge Gym | Elite Performance Training">
	<Header slot="header" />

	<!-- Hero Section -->
	<section
		class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20"
	>
		<!-- Background Atmosphere -->
		<div class="absolute inset-0 z-0">
			<div class="absolute inset-0 bg-void"></div>

			<!-- Background Image -->
			<div
				class="absolute inset-0 opacity-40 mix-blend-screen grayscale contrast-125"
			>
				<Image
					src={heroBg}
					alt="PulseForge Gym Atmosphere"
					class="w-full h-full object-cover"
					width={1920}
					loading="eager"
				/>
			</div>

			<!-- Radial Glows -->
			<div
				class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[80vw] h-[80vw] bg-volt/5 blur-[120px] rounded-full mix-blend-overlay"
			>
			</div>
			<div
				class="absolute top-1/4 left-1/3 w-[40vw] h-[40vw] bg-flux/5 blur-[100px] rounded-full mix-blend-overlay"
			>
			</div>

			<!-- Vignette -->
			<div
				class="absolute inset-0 bg-[radial-gradient(circle_at_center,_transparent_0%,_#050505_90%)]"
			>
			</div>
		</div>

		<div
			class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center"
		>
			<div
				class="mb-6 inline-flex items-center gap-2 px-3 py-1 rounded-full border border-volt/20 bg-volt/5 text-volt text-[10px] font-black uppercase tracking-[0.3em] clip-reveal"
			>
				<span class="relative flex h-2 w-2">
					<span
						class="animate-ping absolute inline-flex h-full w-full rounded-full bg-volt opacity-75"
					></span>
					<span
						class="relative inline-flex rounded-full h-2 w-2 bg-volt"
					></span>
				</span>
				Perth's Elite Performance Center
			</div>

			<h1
				class="text-white text-5xl md:text-8xl font-black uppercase tracking-tighter leading-[0.9] mb-8"
			>
				Forge your body.<br />
				<span class="text-volt">
					<KineticText words={heroWords} />
				</span>
			</h1>

			<p class="text-muted text-lg md:text-xl max-w-2xl mx-auto mb-12">
				High-intensity kinetic science meets unrelenting discipline.
				Join the epicenter of elite training in Subiaco and West Perth.
			</p>

			<div
				class="flex flex-col sm:flex-row items-center justify-center gap-6"
			>
				<ChargeButton
					href={`${base}contact`}
					class="w-full sm:w-auto px-12 py-5 text-base"
				>
					Start 7-Day Free Trial
				</ChargeButton>
				<a
					href={`${base}classes`}
					class="group flex items-center gap-3 text-sm font-bold uppercase tracking-widest text-white hover:text-flux transition-colors"
				>
					View Class Schedule
					<svg
						xmlns="http://www.w3.org/2000/svg"
						class="h-5 w-5 transition-transform group-hover:translate-x-1"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2.5"
							d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
					</svg>
				</a>
			</div>
		</div>

		<!-- Scroll Indicator -->
		<div
			class="absolute bottom-10 left-1/2 -translate-x-1/2 flex flex-col items-center gap-4 text-muted opacity-50"
		>
			<span class="text-[10px] font-black uppercase tracking-[0.4em]"
				>Scroll</span
			>
			<div
				class="w-[1px] h-12 bg-gradient-to-b from-muted to-transparent"
			>
			</div>
		</div>
	</section>

	<!-- Programs Section -->
	<section class="py-32 relative bg-void overflow-hidden">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div
				class="flex flex-col md:flex-row justify-between items-end mb-16 gap-8"
			>
				<div class="max-w-xl">
					<h2
						class="text-4xl md:text-6xl font-black uppercase tracking-tighter mb-4"
					>
						Forging <span class="text-flux">Versatility</span>
					</h2>
					<p class="text-muted text-lg">
						Our programs are engineered to build a complete athlete:
						Strength, Conditioning, and Longevity.
					</p>
				</div>
				<a
					href={`${base}programs`}
					class="text-xs font-black uppercase tracking-widest text-volt border-b-2 border-volt/20 hover:border-volt transition-colors pb-1"
				>
					Explore All Programs
				</a>
			</div>

			<BentoGrid programs={programs} />
		</div>
	</section>

	<!-- Stats / Trust -->
	<section class="py-24 glass-dark border-y border-white/5">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="grid grid-cols-2 md:grid-cols-4 gap-12">
				{
					[
						{ label: "Elite Trainers", val: "12" },
						{ label: "Weekly Classes", val: "45+" },
						{ label: "Surface (sqm)", val: "1200" },
						{ label: "Success Stories", val: "500+" },
					].map((stat) => (
						<div class="text-center">
							<span class="block text-4xl md:text-6xl font-black text-white mb-2">
								{stat.val}
							</span>
							<span class="block text-[10px] font-black uppercase tracking-[0.3em] text-volt">
								{stat.label}
							</span>
						</div>
					))
				}
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="py-32 relative overflow-hidden">
		<div class="absolute inset-0 bg-armor/50"></div>
		<div
			class="absolute inset-0 bg-[radial-gradient(circle_at_bottom_right,_var(--color-volt)_0%,_transparent_50%)] opacity-10"
		>
		</div>

		<div class="relative z-10 max-w-4xl mx-auto px-4 text-center">
			<h2
				class="text-4xl md:text-6xl font-black uppercase tracking-tighter mb-8 leading-tight"
			>
				Ready to cross the <span class="text-volt">threshold</span>?
			</h2>
			<p class="text-muted text-lg mb-12">
				Don't settle for average. Join the elite. Your first 7 days are
				on us. Valid for all Perth residents.
			</p>
			<ChargeButton href={`${base}contact`} class="px-16 py-6 text-xl">
				Claim Your Free Pass
			</ChargeButton>
		</div>
	</section>

	<Footer slot="footer" />
</MainLayout>
