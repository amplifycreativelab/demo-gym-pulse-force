---
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ChargeButton from "../components/ChargeButton.astro";

const base = import.meta.env.BASE_URL.endsWith("/")
    ? import.meta.env.BASE_URL
    : `${import.meta.env.BASE_URL}/`;
---

<MainLayout
    title="Contact & Location | PulseForge Gym"
    description="Visit our concept facility. Start your 7-day free trial or enquire about personal training."
>
    <Header slot="header" />

    <section class="pt-40 pb-32">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-20">
                <!-- Form Side -->
                <div>
                    <h1
                        class="text-5xl md:text-7xl font-black uppercase tracking-tighter mb-8"
                    >
                        Threshold <span class="text-volt">Entry</span>
                    </h1>
                    <p class="text-muted text-lg mb-12">
                        Ready to cross over? Fill out the form below to claim
                        your 7-day free pass or enquire about elite performance
                        coaching.
                    </p>

                    <form class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="flex flex-col gap-2">
                                <label
                                    class="text-[10px] font-black uppercase tracking-widest text-muted"
                                    >Full Name</label
                                >
                                <input
                                    type="text"
                                    placeholder="John Doe"
                                    class="bg-armor border border-white/5 p-4 rounded-sm text-white focus:outline-none focus:border-volt/50 transition-colors"
                                />
                            </div>
                            <div class="flex flex-col gap-2">
                                <label
                                    class="text-[10px] font-black uppercase tracking-widest text-muted"
                                    >Email Address</label
                                >
                                <input
                                    type="email"
                                    placeholder="john@example.com"
                                    class="bg-armor border border-white/5 p-4 rounded-sm text-white focus:outline-none focus:border-volt/50 transition-colors"
                                />
                            </div>
                        </div>

                        <div class="flex flex-col gap-2">
                            <label
                                class="text-[10px] font-black uppercase tracking-widest text-muted"
                                >Service Intent</label
                            >
                            <select
                                class="bg-armor border border-white/5 p-4 rounded-sm text-white focus:outline-none focus:border-volt/50 transition-colors appearance-none"
                            >
                                <option>7-Day Free Trial</option>
                                <option>Performance Coaching</option>
                                <option>Corporate Partnership</option>
                                <option>Media Equiry</option>
                            </select>
                        </div>

                        <div class="flex flex-col gap-2">
                            <label
                                class="text-[10px] font-black uppercase tracking-widest text-muted"
                                >Message (Optional)</label
                            >
                            <textarea
                                rows="4"
                                placeholder="Tell us about your fitness baseline..."
                                class="bg-armor border border-white/5 p-4 rounded-sm text-white focus:outline-none focus:border-volt/50 transition-colors resize-none"
                            ></textarea>
                        </div>

                        <ChargeButton type="submit" class="w-full py-5 text-lg">
                            Submit Threshold Request
                        </ChargeButton>
                    </form>
                </div>

                <!-- Info Side -->
                <div class="flex flex-col justify-center">
                    <div
                        class="glass-dark border border-white/10 p-10 rounded-sm mb-12"
                    >
                        <h4
                            class="text-volt text-xs font-black uppercase tracking-widest mb-8"
                        >
                            Location & Contact
                        </h4>
                        <div class="space-y-8">
                            <div class="flex gap-6">
                                <div
                                    class="w-10 h-10 bg-void border border-white/10 flex items-center justify-center text-white flex-shrink-0"
                                >
                                    <svg
                                        class="w-5 h-5"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                        ><path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="1.5"
                                            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                        ></path><path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="1.5"
                                            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                        ></path></svg
                                    >
                                </div>
                                <div>
                                    <span
                                        class="block text-white font-black uppercase tracking-widest text-sm mb-1"
                                        >HQ Facility</span
                                    >
                                    <p class="text-muted text-sm">
                                        42 Forge Way,<br />Training District
                                    </p>
                                </div>
                            </div>
                            <div class="flex gap-6">
                                <div
                                    class="w-10 h-10 bg-void border border-white/10 flex items-center justify-center text-white flex-shrink-0"
                                >
                                    <svg
                                        class="w-5 h-5"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                        ><path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="1.5"
                                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                        ></path></svg
                                    >
                                </div>
                                <div>
                                    <span
                                        class="block text-white font-black uppercase tracking-widest text-sm mb-1"
                                        >Phone</span
                                    >
                                    <p class="text-muted text-sm">
                                        amplifycreativelab.com
                                    </p>
                                </div>
                            </div>
                            <div class="flex gap-6">
                                <div
                                    class="w-10 h-10 bg-void border border-white/10 flex items-center justify-center text-white flex-shrink-0"
                                >
                                    <svg
                                        class="w-5 h-5"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                        ><path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="1.5"
                                            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                        ></path></svg
                                    >
                                </div>
                                <div>
                                    <span
                                        class="block text-white font-black uppercase tracking-widest text-sm mb-1"
                                        >Forge Hours</span
                                    >
                                    <p class="text-muted text-sm">
                                        Mon-Fri: 05:00 - 21:00<br />Sat: 07:00 -
                                        18:00<br />Sun: 08:00 - 16:00
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Subtle map placeholder -->
                    <div
                        class="aspect-video bg-armor border border-white/5 rounded-sm flex items-center justify-center text-muted uppercase text-[10px] font-black tracking-widest relative overflow-hidden group"
                    >
                        <div
                            class="absolute inset-0 bg-gradient-to-br from-volt/5 to-flux/5"
                        >
                        </div>
                        <span
                            class="relative z-10 opacity-30 group-hover:opacity-100 transition-opacity"
                            >Interactive map placeholder</span
                        >
                        <svg
                            class="absolute w-full h-full text-white/5 p-4"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"
                            ></path></svg
                        >
                    </div>
                </div>
            </div>
        </div>
    </section>

    <Footer slot="footer" />
</MainLayout>
