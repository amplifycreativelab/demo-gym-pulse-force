---
import MainLayout from "../../layouts/MainLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { trainers } from "../../data/content";
import { Image } from "astro:assets";

const base = import.meta.env.BASE_URL;
---

<MainLayout 
  title="Trainer Team | PulseForge Gym"
  description="Meet the elite performance coaches at PulseForge Perth."
>
  <Header slot="header" />

  <section class="pt-40 pb-32">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-20">
        <h1 class="text-5xl md:text-7xl font-black uppercase tracking-tighter mb-6 text-white text-center md:text-left">
          Elite <span class="text-volt">Operators</span>
        </h1>
        <p class="text-muted text-lg max-w-2xl text-center md:text-left">
          Our coaches aren't just 'trainers'. They are tactical performance experts with decades of combined experience in high-level sports and military physiology.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        {
          trainers.map(trainer => (
            <div class="group">
              <div class="relative aspect-[3/4] bg-armor border border-white/5 mb-6 overflow-hidden rounded-sm">
                <!-- Image -->
                 <Image 
                   src={trainer.image} 
                   alt={trainer.name} 
                   width={600}
                   class="absolute inset-0 w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-700"
                 />

                <!-- Gradient Overlay -->
                <div class="absolute inset-0 bg-gradient-to-t from-void via-transparent to-transparent z-10 opacity-90"></div>
                
                <!-- Info Overlay (Mobile friendly) -->
                <div class="absolute bottom-6 left-6 right-6 z-20 translate-y-2 group-hover:translate-y-0 transition-transform duration-500">
                   <span class="block text-volt font-black uppercase tracking-widest text-[10px] mb-1">{trainer.role}</span>
                   <h3 class="text-white font-heading font-black text-2xl uppercase tracking-tighter mb-4">{trainer.name}</h3>
                   <div class="flex flex-wrap gap-2">
                    {trainer.specialties.map(spec => (
                      <span class="px-2 py-0.5 bg-white/10 text-white text-[9px] font-bold uppercase tracking-widest rounded-sm backdrop-blur-sm">
                        {spec}
                      </span>
                    ))}
                   </div>
                </div>
              </div>
              <p class="text-muted text-sm leading-relaxed mb-6 group-hover:text-white transition-colors">
                {trainer.bio}
              </p>
              <a href={`${base}contact`} class="text-xs font-black uppercase tracking-[0.2em] text-volt border-b-2 border-volt/10 hover:border-volt transition-colors pb-1">
                Book 1-on-1 Session
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Hiring CTA -->
  <section class="py-20 bg-void border-y border-white/5">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-black uppercase tracking-tighter mb-4">Join the Team</h2>
      <p class="text-muted text-sm mb-8">Think you have what it takes to forge the next generation of athletes? We're always looking for elite coaches.</p>
      <a href="#" class="inline-block px-8 py-3 border border-white/20 text-white text-xs font-black uppercase tracking-widest hover:bg-white hover:text-void transition-all">Submit CV</a>
    </div>
  </section>

  <Footer slot="footer" />
</MainLayout>
