---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import MainLayout from "../layouts/MainLayout.astro";

const base = import.meta.env.BASE_URL.endsWith("/")
    ? import.meta.env.BASE_URL
    : `${import.meta.env.BASE_URL}/`;
---

<MainLayout
    title="Privacy Policy | PulseForge Gym"
    description="Privacy policy placeholder for the PulseForge concept demo."
>
    <Header slot="header" />

    <section class="pt-40 pb-32">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <a
                href={base}
                class="text-[10px] font-black uppercase tracking-[0.35em] text-muted hover:text-white transition-colors"
            >
                &larr; Back to Home
            </a>

            <h1
                class="text-5xl md:text-7xl font-black uppercase tracking-tighter mt-8 mb-8 leading-none"
            >
                Privacy <span class="text-volt">Policy</span>
            </h1>

            <div class="space-y-8 text-muted text-base leading-relaxed">
                <p>
                    PulseForge is a portfolio-only concept demo. This page exists
                    to prevent internal navigation from leading to a 404 in the
                    deployed build.
                </p>

                <div class="glass-dark border border-white/10 p-10 rounded-sm">
                    <h2
                        class="text-white font-black uppercase tracking-widest text-sm mb-4"
                    >
                        Summary
                    </h2>
                    <ul class="space-y-3 text-sm">
                        <li>
                            We do not intentionally collect personal data in this
                            demo.
                        </li>
                        <li>
                            Any forms shown are non-functional UI placeholders
                            unless explicitly wired up.
                        </li>
                        <li>
                            For questions about this demo, use the
                            <a
                                class="text-volt hover:underline underline-offset-4"
                                href={`${base}contact`}
                                >contact page</a
                            >.
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <Footer slot="footer" />
</MainLayout>
